@model QLNS.Models.Book

@{
    ViewData["Title"] = "Chi tiết sách";
}

<div class="container my-4">
    <div class="row">
        <!-- Hình ảnh sách -->
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content("~/Images/" + Model.ImageUrl)" alt="@Model.Title" class="img-fluid border shadow-sm" style="max-height: 400px;" />
            }
            else
            {
                <div class="text-muted">Không có hình ảnh</div>
            }
        </div>

        <!-- Thông tin sách -->
        <div class="col-md-8">
            <h3>@Model.Title</h3>
            <p><strong>Nhà cung cấp:</strong> NXB Trẻ</p>
            <p><strong>Nhà xuất bản:</strong> NXB Trẻ</p>
            <p><strong>Tác giả:</strong> @Model.Author</p>
            <div class="mb-2">
                <span class="text-danger fw-bold fs-4">@Model.Price.ToString("n0") đ</span>
                <span class="text-decoration-line-through text-muted ms-2">@((Model.Price * 1.3M).ToString("n0")) đ</span>
                <span class="badge bg-danger ms-2">-23%</span>
            </div>

            <div class="mb-2">
                <p><strong>Thời gian giao hàng:</strong> Giao hàng ngay</p>
                <p><strong>Giao hàng đến:</strong> <a href="#">Thay đổi</a></p>
                <p><strong>Đổi trả sản phẩm trong 30 ngày</strong> <a href="#">Xem thêm</a></p>
            </div>

            <div class="mb-3 d-flex align-items-center">
                <label class="me-2"><strong>Số lượng:</strong></label>
                <input type="number" value="1" min="1" class="form-control w-auto" />
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-outline-danger"><i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng</button>
                <button class="btn btn-danger fw-bold">Mua ngay</button>
            </div>

            <hr />
            <p><strong>Mô tả:</strong></p>
            <p>@Model.Description</p>

            <p><strong>Chủ đề:</strong> @Model.Category?.CategoryName</p>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Chỉnh sửa</a>
        <a asp-action="Index" class="btn btn-outline-primary">Quay lại danh sách</a>
    </div>
</div>
