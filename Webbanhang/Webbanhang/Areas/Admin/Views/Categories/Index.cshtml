@model IEnumerable<Webbanhang.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #e9f0ff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #1a237e;
        padding: 2rem 0;
    }

    .container {
        max-width: 900px;
    }

    h3 {
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #1a237e;
    }

    .card-category {
        border-radius: 1rem;
        box-shadow: 0 0 15px rgba(26, 35, 126, 0.3);
        transition: box-shadow 0.3s ease;
        margin-bottom: 1.5rem;
    }

        .card-category:hover {
            box-shadow: 0 0 25px rgba(26, 35, 126, 0.6);
        }

    .card-header {
        background-color: #1a237e;
        color: #e3f2fd;
        font-weight: 600;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        font-size: 1.1rem;
        padding: 0.8rem 1.2rem;
    }

    .card-body {
        padding: 1rem 1.5rem;
        font-size: 1.05rem;
    }

    .btn-group {
        display: flex;
        justify-content: flex-end;
        gap: 0.6rem;
        margin-top: 0.8rem;
    }

    .btn-info {
        background-color: #3949ab;
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 0.3rem;
        padding: 0.3rem 0.8rem;
        transition: background-color 0.3s ease;
    }

        .btn-info:hover {
            background-color: #283593;
            color: white;
        }

    .btn-warning {
        background-color: #fbc02d;
        border: none;
        color: #1a237e;
        font-weight: 600;
        border-radius: 0.3rem;
        padding: 0.3rem 0.8rem;
        transition: background-color 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #f9a825;
            color: #1a237e;
        }

    .btn-danger {
        background-color: #e53935;
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 0.3rem;
        padding: 0.3rem 0.8rem;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #b71c1c;
            color: white;
        }

    .btn-primary {
        background-color: #1a237e;
        border: none;
        font-weight: 700;
        border-radius: 0.5rem;
        padding: 0.5rem 1.25rem;
        margin-top: 2rem;
        float: right;
    }

        .btn-primary:hover {
            background-color: #283593;
        }
</style>

<div class="container">
    <h3>Category List</h3>

    @foreach (var item in Model)
    {
        <div class="card card-category">
            <div class="card-header">
                ID: @item.Id
            </div>
            <div class="card-body">
                <strong>Name:</strong> @item.Name

                <div class="btn-group">
                    <a asp-action="Display" asp-route-id="@item.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    }

    <a asp-action="Add" class="btn btn-primary">Add New Category</a>
</div>
