@model IEnumerable<Webbanhang.Models.Product>

<style>
    body {
        background-color: #f8faff;
        color: #2e3a59;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-title {
        font-weight: 700;
        font-size: 2rem;
        color: #374785;
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-add {
        background-color: #556ee6;
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.4rem 1rem;
        border-radius: 0.35rem;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-add:hover {
            background-color: #3b53c1;
        }

    /* Grid container */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1rem;
    }

    /* Card mỗi sản phẩm */
    .product-card {
        background: #ffffff;
        border-radius: 0.8rem;
        box-shadow: 0 3px 8px rgb(0 0 0 / 0.1);
        padding: 1rem 1.2rem;
        display: flex;
        flex-direction: column;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: default;
    }

        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 15px rgb(0 0 0 / 0.15);
        }

    .product-img {
        width: 100%;
        max-height: 160px;
        object-fit: contain;
        border-radius: 0.6rem;
        margin-bottom: 1rem;
        background-color: #f0f4ff;
    }

    .no-image-text {
        color: #a0a8c2;
        font-style: italic;
        height: 160px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 0.6rem;
        background-color: #f0f4ff;
        margin-bottom: 1rem;
    }

    .product-name {
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 0.25rem;
        color: #374785;
    }

    .product-price {
        color: #6c63ff;
        font-weight: 600;
        margin-bottom: 0.6rem;
    }

    .product-desc {
        flex-grow: 1;
        font-size: 0.9rem;
        color: #6b7280;
        margin-bottom: 0.8rem;
        line-height: 1.3;
    }

    .product-category {
        font-style: italic;
        color: #a0a8c2;
        margin-bottom: 1rem;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    .btn-action {
        flex: 1;
        padding: 0.4rem 0;
        font-weight: 600;
        border-radius: 0.35rem;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        font-size: 0.9rem;
        border: 1.5px solid transparent;
        transition: all 0.3s ease;
        user-select: none;
    }

    .btn-view {
        border-color: #6c63ff;
        color: #6c63ff;
        background-color: transparent;
    }

        .btn-view:hover {
            background-color: #6c63ff;
            color: white;
            box-shadow: 0 0 10px #6c63ff88;
        }

    .btn-edit {
        border-color: #ffb547;
        color: #ffb547;
        background-color: transparent;
    }

        .btn-edit:hover {
            background-color: #ffb547;
            color: white;
            box-shadow: 0 0 10px #ffb547aa;
        }

    .btn-delete {
        border-color: #ff6e6e;
        color: #ff6e6e;
        background-color: transparent;
    }

        .btn-delete:hover {
            background-color: #ff4a4a;
            color: white;
            box-shadow: 0 0 10px #ff4a4aaa;
        }
</style>

<h2 class="page-title">
    Products
    <a asp-action="Add" class="btn-add btn-sm">Add Product</a>
</h2>

<div class="product-grid">
    @foreach (var product in Model)
    {
        <div class="product-card">
            @if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                <img src="@product.ImageUrl" alt="@product.Name" class="product-img" />
            }
            else
            {
                <div class="no-image-text">No Image</div>
            }

            <div class="product-name">@product.Name</div>
            <div class="product-price">@product.Price.ToString("C")</div>
            <div class="product-desc">@product.Description</div>
            <div class="product-category">@((product.Category?.Name) ?? "No Category")</div>

            <div class="action-buttons">
                <a asp-action="Display" asp-route-id="@product.Id" class="btn-action btn-view">View</a>
                <a asp-action="Update" asp-route-id="@product.Id" class="btn-action btn-edit">Edit</a>
                <a asp-action="Delete" asp-route-id="@product.Id" class="btn-action btn-delete">Delete</a>
            </div>
        </div>
    }
</div>
