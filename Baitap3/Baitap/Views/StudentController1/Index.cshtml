@{
}
@model Baitap.Models.Students
@using (Html.BeginForm("ShowKQ", "StudentController1", FormMethod.Post))
{
    <p>MSSV: @Html.TextBoxFor(m => m.MSSV)</p>
    <p>Họ tên: @Html.TextBoxFor(m => m.HoTen)</p>
    <p>Điểm TB: @Html.TextBoxFor(m => m.DiemTB)</p>
    <p>
        Chuyên ngành:
        @Html.DropDownListFor(m => m.ChuyenNganh, new SelectList(new[] { "CNPM", "HTTT", "ANM", "TTNT", "MMT" }))
    </p>
    <button type="submit">Đăng ký</button>
}